<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="OneSignalAPI.LatLongPushNotification"
             xmlns:local="clr-namespace:OneSignalAPI;assembly=OneSignalAPI">

    <StackLayout HorizontalOptions="Center" VerticalOptions="Center">
        <Label Text="Test Push Notification Based on Location" FontSize="16"/>
        <Entry Placeholder="Enter Latitude Value" x:Name="lat" />
        <Entry Placeholder="Enter Longitude Value" x:Name="longitude" />
        <Entry Placeholder="Enter Radius in KM" x:Name="radius" />
        <Entry Placeholder="(Type Message)" x:Name="msg"/>
        <Button Text="Push Notification" Clicked="noti_btn"/>
     
    <Label x:Name="lbl" />
        
        
    </StackLayout>
    
</ContentPage>